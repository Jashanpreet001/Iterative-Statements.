#include <stdio.h>

int main(){
    
    int num,i;
    
    double factorial;
    
    factorial=1;
    
    printf("enter the number you want the factorial of\n");
    scanf("%d",&num);
    if(num==0)
    {factorial=0;}
    
    else
    {for(i=1;i<=num;i++)
    {
        
        factorial=factorial*i;
    }
    }
    
    printf("The factorial of the number is %lf\n",factorial);
    
    return 0;
    
}
