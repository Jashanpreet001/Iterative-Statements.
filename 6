#include <stdio.h>

int main(){
    
    int i;
    printf("The number less than 100 which are divisible by both 3 and 5 are\n");
    for(i=1;i<=100;i++)
    {
        if(i%3==0 && i%5==0)
        {  printf("%d\t",i);
          }
    
    }
    
    
    return 0;
    
}
